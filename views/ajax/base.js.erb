// re-run beagle js app.init
$("#init-beagle-js").html("<%= escape_javascript(render('layouts/init_beagle_js')) %>");
// render top bar for collapsable side nav
$("#top-bar").html("<%= escape_javascript(render('layouts/beagle_top_bar')) %>");
