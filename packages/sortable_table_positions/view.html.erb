<%= form_with(scope: 'ChangeStpId-stp-form', 
              url: ChangePath_path,
              method: :post,
              data: { stpId: 'ChangeStpId'  }) do |ChangeStpIdForm_stp_form| %>
  <%= ChangeStpIdForm_stp_form.hidden_field 'ChangeParent_id', value: ChangeParent.id %>
  <div id='ChangeStpId-stp-hidden-inputs'>
  </div>
<% end %>
<table class="table table-striped table-hover">
  <tbody class='ChangeStpId-stp-table-body'>
    <% ChangeParent.ChangeChildren.order(:position).each do |ChangeChild| %>
      <tr class="ChangeStpId-stp-table-row" data-stpValue="<%= ChangeChild.id %>">
        <td>  
        <%# DeleteThis: you may want to set the td style to not have a border top color (style="border-top-color: transparent;) if customizing the styles beyond basic table - otherwise there will be a bar at the top of the placeholder that jquery sortable creates %>
          <!-- DeleteThis: insert HTML here -->
          <i class="handle px-3 fs-4 text-secondary mdi mdi-more" data-HandleStpId="ChangeStpId" style="cursor: grab; :active {cursor: grabbing}"></i>
          <!-- DeleteThis: the icon above is an example element for grabbing when sorting. However, any element with class "handle" and date-HandleStpId="ChangeStpId" can be grabbed and used for sorting -->
